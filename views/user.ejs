      var status = document.getElementById(`edit-status-${id}`).value
      var id = id
      axios.post('http://localhost:3000/user/edit',{
        id: id,
        username: username,
        password: password,
        status: status
      }).then(req=>{
        $("[data-dismiss=modal]").trigger({ type: "click" });
        location.reload()
      }).catch(e=>console.log(e))
    }
