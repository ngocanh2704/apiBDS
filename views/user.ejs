                </div>
                <!-- /.card-header -->
                <div class="card-body">
                  <table id="example1" class="table table-bordered table-striped">
                    <thead>
                    <tr>
                      <!-- <th>ID</th> -->
                      <th>Username</th>
                      <th>Nhân viên</th>
                      <th>Status</th>
                      <th>Quyền</th>
                      <th>CreateAt</th>
                      <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                      <% data.forEach(item => { %>
                        
                    <tr>
                      <td><%= item.username %></td>
                      <td><%= item.employee_ID.employee_name %></td>
                      <td><%= item.status == true ? 'Active' : 'Disable' %></td>
                      <td><%= item.role %></td>
                      <td><%= item.createAt %></td>
                      <td class="project-actions text-right">
                        <a class="btn btn-info btn-sm" data-toggle="modal" data-target="#edit-modal-xl-<%= item._id %>">
                            <i class="fas fa-pencil-alt">
                            </i>
                            Sửa
                        </a>
                        <a class="btn btn-danger btn-sm" onclick="clickDelete('<%= item._id %>')">
                            <i class="fas fa-trash">
                            </i>
                            Xóa
                        </a>
                    </td>
                    </tr>
                    <div class="modal fade" id="edit-modal-xl-<%= item._id %>">
